{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM"
    ],
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@/render"
  },
}